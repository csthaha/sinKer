.addressPage
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0
    background-color: #fff
    z-index: 9998
    width 100%
    height 100%
    animation-duration: 1s;
    animation-fill-mode: both;
    animation-name: fadeMenu;
    .address-head
        padding: 10px
        display flex
        background-color red
        align-items center
        .arrow
            width 20px
            height 20px
            border-top 2px solid #eee
            border-left: 2px solid #eee
            transform: rotate(-45deg);
        .title
            flex: 1
            text-align: center
            color: #eee
            font-weight: bold
    .address-message
        width 100%
        padding: 0 10px
        font-size: 18px
        margin-bottom: 10px
        .address-time
            display: flex
            justify-content: space-between
            .del
                margin-right: 20px
    .addDress
        border: 1px solid #000
        width: 150px
        height: 35px
        text-align: center
        line-height: 35px
        margin-top: 30px
        position: absolute
        left: 50%
        transform: translate(-50%, -50%)
        
@keyframes fadeMenu 
    from {
        opacity 0
        // transform: translate3d(-100%, 0, 0);
        transform: translate3d(100%,0,0);
    }
    to {
        opacity 1
        // transform: none 
        transform: translate3d(0,0,0);
    }
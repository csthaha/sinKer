.a
    z-index 99
    position fixed
    bottom 2.8rem
    background: #fff;
    width 100%
   
    .b
        box-shadow: 0 5px 13px rgba(0,0,0,.12);
        background: #f7f7f7;
        background-image: linear-gradient(#fefefe,#f6f6f6);
        flex-shrink: 0;
        height: 5.4rem;
        display flex
        .aa
            display: inline-block;
            position: relative;
            top: -2rem;
            width: 5.3rem;
            height: 5.3rem;
            background: #fff;
            margin: .6rem;
            padding: .5rem;
            flex-shrink: 0;
            border-radius: .2rem;
            box-sizing: border-box;
            img 
                height 100%
                width 100%
        .ab
            box-sizing: border-box;
            // margin: .8rem .6rem .8rem .2rem;
            overflow: hidden;
            position: relative;
            flex-grow: 1;
            h4    
                font-size: .75rem;
                margin-bottom: .3rem;
                white-space: nowrap;
                text-overflow: ellipsis;
                overflow: hidden;
                color: #333;
            p    
                font-size: .6rem;
                line-height: .8rem;
                margin-bottom: .7rem;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                overflow: hidden;
            .price
                position: absolute;
                left: 0;
                bottom: 4px;
                font-weight: 700;
                color: #d44d44;
                font-size: .7rem;
                display: inline-block;
                white-space: nowrap;
    .c
        .cc
            .ccc
                position: relative;
                height: 2rem;
                line-height: 2rem;
                overflow: hidden;
                padding: 0 .6rem;
                margin-top 0.6rem
                border-bottom 1px solid #f7f7f7
            .ccc-ab
                display flex
                .ccc-color
                    margin .6rem
                    display flex
                    
                    width 100%
                    
                    .color
                        border 1px solid #eeeeee
                        width 100px
                        text-align center
                        margin 10px
                        

                .ccc-size
                    display flex
                    justify-content: space-between;
                    flex-direction: row;
                    flex-wrap: wrap;
                    margin-left 10px
                    .size
                        width 100px
                        border 1px solid #eeeeee
                        margin 2px
                        text-align center
                    .sizeText
                        margin-left 50px

        .cd
            .cdd
                position: relative;
                height: 2rem;
                line-height: 2rem;
                overflow: hidden;
                padding: 0 .6rem;
                margin-top 0.6rem
                border-bottom 1px solid #f7f7f7
            .cde
                display flex
                .cdec
                    margin 1rem
                .reduce
                    height 20px
                    width 20px
                    line-height 20px       
                    text-align center
                    background-color green
                    color #fff
                    border-radius 50%
                .add
                    height 20px
                    width 20px
                    line-height 20px       
                    text-align center
                    background-color green
                    color #fff
                    border-radius 50%

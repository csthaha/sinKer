.User
    width 100%
    height 100%
    background-color #eee
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0
    .head
        text-align center
        color #ffffff
        font-size 18px
        line-height 50px
        font-weight bold

    .user-content
        margin-top 60px
        .message 
            background-color #fff
            display flex
            height 80px
            justify-content space-between
            border-radius 10px 10px 0 0
            padding 0 10px 
            .avatar-uploader > .ant-upload {
            width: 80px;
            height: 100%;
            border-radius: 50%
            }
            .avatar
                height 100%
                width 80px
                border-radius 50%
            .message-name
                display flex
                justify-content center
                align-items center
                .name
                    width 200px
                    height 80px
                    line-height 80px
                    text-align center
                    font-size 18px
                    font-weight bold
                .arrow
                    width 20px
                    height 20px
                    border-top 2px solid #000
                    border-right: 2px solid #000
                    transform: rotate(45deg);
        .feature
            margin-top 10px
            background-color #fff
            border-radius 0 0 10px 10px
            .feature-same
                // width 100%
                height 50px
                line-height: 50px   
                font-size: 16px 
                padding-left 10px
                animation-duration: 1s;
                animation-fill-mode: both;
                animation-name: fadeFeature;
            .modifyPass
                border-bottom 1px solid #000
                animation-delay: 0.1s
            .address
                border-bottom 1px solid #000
                animation-delay: 0.2s
            .order
                border-bottom 1px solid #000
                animation-delay: 0.3s
            .service
                border-bottom 1px solid #000
                animation-delay: 0.4s
            .coupons
                animation-delay: 0.5s
        .btn
            margin-top 20px   
            width 100%
            height 40px
            background-color #fff  
            Button 
                width 100%
                height 100%
                font-size: 18px
                border-radius: 5px
                
@keyframes fadeFeature 
    from {
        opacity 0
        // transform: translate3d(-100%, 0, 0);
        transform: translate3d(100%,0,0);
    }
    to {
        opacity 1
        // transform: none 
        transform: translate3d(0,0,0);
    }
                    

                   

                
                
                    


.addAdressPage
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0
    background-color: #fff
    z-index: 9998
    width 100%
    height 100%
    .address-head
        padding: 10px
        display flex
        background-color red
        align-items center
        .arrow
            width 20px
            height 20px
            border-top 2px solid #eee
            border-left: 2px solid #eee
            transform: rotate(-45deg);
        .title
            flex: 1
            text-align: center
            color: #eee
            font-weight: bold
    .user
        display flex
        height: 50px
        width 100%
        border-bottom 1px solid #000
        span 
            width 100px
            height 100%
            line-height: 50px
            margin-left 10px
        .user-input
            border-style: none 
        